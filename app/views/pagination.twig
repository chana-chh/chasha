{% extends "templates/app.twig" %}

{% block sadrzaj %}
<h1>Stranicenje</h1>
<div id="ajax"></div>
<h2>Data</h2>

<table style="width:100%" id="data_table">
    <thead>
        <tr>
            <th style="width:10%;text-align:left;">Id</th>
            <th style="width:20%;text-align:left;">Broj</th>
            <th style="width:20%;text-align:left;">Vrsta</th>
            <th style="width:25%;text-align:left;">Tuzioci</th>
            <th style="width:25%;text-align:left;">Tuzeni</th>
        </tr>
    </thead>
    <tbody>
        {% for predmet in predmeti.data %}
        <tr>
            <td>{{ predmet.id }}</td>
            <td>{{ predmet.broj() }}</td>
            <td>{{ predmet.vrstaPredmeta().naziv }}</td>
            <td>
                <ul>
                    {% for tuzilac in predmet.tuzioci() %}
                    <li>{{ tuzilac.naziv }}</li>
                    {% endfor %}
                </ul>
            </td>
            <td>
                <ul>
                    {% for tuzeni in predmet.tuzeni() %}
                    <li>{{ tuzeni.naziv }}</li>
                    {% endfor %}
                </ul>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<table style="width: 100%;">
    <tr>
        <td style="width:30%;">{{ predmeti.links.buttons|raw }}</td>
        <td style="width:40%;">Go to page {{ predmeti.links.select|raw }}</td>
        <td style="width:30%;">
            Prikazani redovi od
            <span id="start">{{ predmeti.links.row_from }}</span> do {{ predmeti.links.row_to }}
            od ukupno {{ predmeti.links.total_rows }}
        </td>
    </tr>
</table>

{# {{ csrf|raw }} #}
<script>
    document.querySelector("#pgn-goto").addEventListener('change', function (e) {
        location = this.value;
    });
</script>

{% endblock sadrzaj %}
