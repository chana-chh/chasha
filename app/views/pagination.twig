{% extends "templates/app.twig" %}

{% block sadrzaj %}
<h1>Stranicenje</h1>
<div id="ajax"></div>
<h2>Data</h2>

<table style="width:100%" id="data_table">
    <thead>
        <tr>
            <th style="width:10%;text-align:left;">Id</th>
            <th style="width:10%;text-align:left;">Datum</th>
            <th style="width:15%;text-align:left;">Broj</th>
            <th style="width:15%;text-align:left;">Vrsta</th>
            <th style="width:25%;text-align:left;">Tuzioci</th>
            <th style="width:25%;text-align:left;">Tuzeni</th>
        </tr>
    </thead>
    <tbody>
        {% for predmet in predmeti.data %}
        <tr>
            <td>{{ predmet.id }}</td>
            <td>{{ predmet.datum_tuzbe }}</td>
            <td>{{ predmet.broj() }}</td>
            <td>{{ predmet.vrstaPredmeta().naziv }}</td>
            <td>
                <ul>
                    {% for tuzilac in predmet.tuzioci() %}
                    <li>{{ tuzilac.naziv }}</li>
                    {% endfor %}
                </ul>
            </td>
            <td>
                <ul>
                    {% for tuzeni in predmet.tuzeni() %}
                    <li>{{ tuzeni.naziv }}</li>
                    {% endfor %}
                </ul>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<table style="width: 100%;">
    <tr>
        <td style="width:40%;padding: .5rem 0;">{{ predmeti.links.buttons|raw }}</td>
        <td style="width:40%;padding: .5rem 0;">Go to page {{ predmeti.links.select|raw }}</td>
        <td style="width:20%;padding: .5rem 0;">
            Prikazani redovi od
            <strong>{{ predmeti.links.row_from }}</strong> do <strong>{{ predmeti.links.row_to }}</strong>
            od ukupno <strong>{{ predmeti.links.total_rows }}</strong>
        </td>
    </tr>
</table>

{% endblock sadrzaj %}
